{
  "manifest_version": 3,
  "name": "小红书视频下载助手",
  "version": "1.0",
  "description": "检测并下载小红书视频",
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "*://*.xiaohongshu.com/*",
    "*://*.xhscdn.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon02.png",
      "48": "images/icon02.png",
      "128": "images/icon02.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.xiaohongshu.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 